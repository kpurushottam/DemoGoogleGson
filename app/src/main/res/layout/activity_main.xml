<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_json_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Json String" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parse Json"
            android:onClick="onParse"/>

        <TextView
            android:id="@+id/tv_json_obj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Json Object" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reflect User Class"
            android:onClick="onReflectClassUser"/>

        <TextView
            android:id="@+id/tv_class_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Json Object" />
    </LinearLayout>
</ScrollView>
